<?xml version="1.0" encoding="utf-8"?>

<odoo>

        <!-- FORM -->
        <record id="view_legal_part_form" model="ir.ui.view">
            <field name="name">legal.part.form</field>
            <field name="model">legal.part</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="contact"/>
                        <field name="dni"/>
                        <field name="role_id"/>
                        <field name="age"/>
                        <field name="lawyer_id"/>
                    </group>
                </form>
            </field>
        </record>

        <!-- TREE -->
        <record id="view_legal_part_tree" model="ir.ui.view">
            <field name="name">legal.part.tree</field>
            <field name="model">legal.part</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="contact"/>
                    <field name="dni"/>
                    <field name="role_id"/>
                    <field name="age"/>
                    <field name="lawyer_id"/>
                </tree>
            </field>
        </record>

</odoo>
