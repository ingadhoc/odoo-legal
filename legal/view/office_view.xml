<?xml version="1.0" encoding="utf-8"?>

<odoo>

        <!-- FORM -->
        <record id="view_legal_office_form" model="ir.ui.view">
            <field name="name">legal.office.form</field>
            <field name="model">legal.office</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                        <field name="mail"/>
                        <field name="location"/>
                        <field name="address"/>
                    </group>
                </form>
            </field>
        </record>

        <!-- TREE -->
        <record id="view_legal_office_tree" model="ir.ui.view">
            <field name="name">legal.office.tree</field>
            <field name="model">legal.office</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="mail"/>
                    <field name="location"/>
                    <field name="address"/>
                </tree>
            </field>
        </record>

</odoo>
