<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <!-- FORM -->
    <record id="view_legal_auxiliary_field_form" model="ir.ui.view">
        <field name="name">legal.auxiliary.field.form</field>
        <field name="model">legal.auxiliary.field</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="department_id"/>
                </group>
            </form>
        </field>
    </record>

    <!-- TREE -->
    <record id="view_legal_auxiliary_field_tree" model="ir.ui.view">
        <field name="name">legal.auxiliary.field.tree</field>
        <field name="model">legal.auxiliary.field</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="department_id"/>
            </tree>
        </field>
    </record>

</odoo>
