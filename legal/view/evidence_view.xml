<?xml version="1.0" encoding="utf-8"?>

<odoo>

        <record id="view_legal_evidence_tree" model="ir.ui.view">
            <field name="name">legal.evidence.tree</field>
            <field name="model">legal.evidence</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="type_id"/>
                    <field name="offerer_id"/>
                    <field name="observations"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- FORM -->
        <record id="view_legal_evidence_form" model="ir.ui.view">
            <field name="name">legal.evidence.form</field>
            <field name="model">legal.evidence</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="type_id"/>
                        <field name="offerer_id"/>
                        <field name="observations"/>
                        <field name="state"/>
                    </group>
                </form>
            </field>
        </record>

</odoo>
