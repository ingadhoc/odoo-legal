<?xml version="1.0" encoding="utf-8"?>

<odoo>

        <!-- FORM -->
        <record id="view_legal_model_form" model="ir.ui.view">
            <field name="name">legal.model.form</field>
            <field name="model">legal.model</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="type"/>
                        <field name="attachment_ids"
                            widget="many2many_binary"
                            />
                    </group>
                </form>
            </field>
        </record>

        <!-- TREE -->
        <record id="view_legal_model_tree" model="ir.ui.view">
            <field name="name">legal.model.tree</field>
            <field name="model">legal.model</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

</odoo>
